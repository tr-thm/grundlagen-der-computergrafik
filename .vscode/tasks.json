{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Make",
            "command": "make -C '${fileDirname}'",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "Make Run",
            "command": "make run -C '${fileDirname}'",
            "group": "none"
        },
        {
            "type": "shell",
            "label": "Make Clean",
            "command": "make clean -C '${fileDirname}'",
            "group": "none"
        }
    ]
}